<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ruskiBackground"
    tools:context="com.example.borris.ruskiroolay.MainActivity"
    android:weightSum="22">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Choose Your Opponent!"
        android:textSize="40dp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:layout_weight="9"
        android:gravity="center_vertical|center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="3"
        android:weightSum="3">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ian2"
            android:padding="5dp"
            android:id="@+id/ian"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sarah2"
            android:padding="5dp"
            android:id="@+id/sarah"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/josh2"
            android:id="@+id/josh"
            android:padding="5dp"
            android:layout_weight="1"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="10"
        android:background="@color/ruskiBackground"
        android:weightSum="3">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="QUIT"
            android:id="@+id/returnButton"
            android:background="@drawable/bottom_button"
            android:textColor="#da8e0a"
            android:layout_weight="1"
            android:layout_marginRight="1dp" />


    </LinearLayout>


</LinearLayout>
